<slider class="my-24" :next-id="'next-'+ {{ id }}" :prev-id="'prev-'+ {{ id }}" :length="{{ entries|length }}">
    {% for entry in entries  %}
        <swiper-slide >
            {% switch entry.type %}
            {% case "numbers" %}
                {% include "_components/blocks/number-comparison.twig" %}
            {% case "complexNumbers" %}
                    {% include "_components/blocks/complex-numbers.twig" %}
            {% case "quote" %}
                    {% include "_components/blocks/quote.twig" %}
            {% default %}
            {% endswitch %}
        </swiper-slide>
    {% endfor %}
</slider>
