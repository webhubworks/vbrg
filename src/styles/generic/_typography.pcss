@import "https://use.typekit.net/tkn7dpb.css";

h1{
    @apply text-3xl sm:text-4xl lg:text-5xl uppercase font-black mb-16;
}

h2{
    @apply text-2xl sm:text-3xl lg:text-4xl uppercase font-black my-12;
}

h3,.h3{
    @apply text-xl sm:text-2xl font-black my-16;
}

.h3{
    @apply normal-case break-normal;
}

h4,.h4{
    @apply text-[30px] leading-[45px] font-black my-16;
}


.typo{
    @apply text-black;
    blockquote{
       @apply text-center;
        p{
            @apply text-lg lg:text-2xl font-black;
        }
        cite{
            @apply text-lg not-italic text-pink;
        }
    }

    p{
        @apply text-lg lg:text-xl mb-8;
    }

    ul {
        @apply text-lg lg:text-xl pb-8 ml-6;
    }

    ol{
        @apply text-lg lg:text-xl pb-8 ml-8;
    }

    ol li{
        @apply pl-4 list-decimal;
    }

    ul li{
        list-style-type: disc; ;
        @apply pl-4;

    }
    &--on-black{
        @apply text-white;
    }

    &--on-white{
        @apply text-black;

        h3{
            @apply mb-4;
        }
    }

    &--on-pink{
        @apply text-black font-medium;
        h3{
            @apply text-white;
        }
        p strong{
            @apply text-white;
        }
    }
    &--on-white-in-pink{
        @apply text-center;
        h2{
            @apply text-2xl lg:text-[60px] lg:leading-[60px] text-pink;
        }
        p strong{
            @apply text-pink;
        }
    }
    &--reduced-margin{
        h3{
            @apply mb-4;
        }
    }
}

